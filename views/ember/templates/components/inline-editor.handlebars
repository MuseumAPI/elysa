<div class="form-group ">
  <label class="col-sm-4 inline-editor-label">{{label}}</label>
  <div class='col-sm-8'>
    {{#if isEditing}}
      {{inline-input val=val class='form-control input-sm'}}
    {{else}}
      <span {{action "beginEditing"}}>
        {{#if val}}
           <span class='click_to_edit'> {{val}} </span>
        {{else}}
          <span class='click_to_edit disabled'> click to edit </span>
        {{/if}}
      </span>
    {{/if}}
  </div>
</div>